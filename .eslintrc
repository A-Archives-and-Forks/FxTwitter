{
  "root": true,
  "extends": [
    "typescript",
    "prettier",
    "plugin:optimize-regex/recommended",
    "plugin:sonarjs/recommended"
  ],
  "plugins": ["eslint-plugin-optimize-regex", "sonarjs"],
  "rules": {
    "sonarjs/cognitive-complexity": ["warn", 20]
  },
  "env": {
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
